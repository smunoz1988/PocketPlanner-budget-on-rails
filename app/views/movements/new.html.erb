<turbo-frame id="flash_messages">
  <%= render 'shared/flash_messages' %>
</turbo-frame>

<div class="container">
    <%= form_with model: @movement, url: user_group_movements_path(:user_id => current_user.id, :group_id => params[:group_id]) do |form| %>
      <h2>Create New Transaction</h2>

      <div class="field">
        <%= form.text_field :name, placeholder: "Name", autofocus: true %>
      </div>

      <div class="field">
        <%= form.text_field :amount, placeholder: "amount", type: :number, step: "any" %>
      </div>

      <div class="field">
        <%= form.select :group_id, options_for_select([["Select a Category", nil]] + @groups), {}, { placeholder: "Select a Category" } %>
      </div>

      <%= form.submit 'Save', class: "btn" %>
    <% end %>

    <br />

    <%= link_to "Back", user_group_movements_path(:user_id => current_user.id, :group_id => params[:group_id]), class: "btn" %>
  </div>